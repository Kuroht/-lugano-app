// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Ingredients {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  number Int
  name   String
  price  Float
  type   String
  photo  String
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  number      Int
  name        String
  ingredients String[]
  description String
  price       Float
  recommended Boolean
  photo  String
}